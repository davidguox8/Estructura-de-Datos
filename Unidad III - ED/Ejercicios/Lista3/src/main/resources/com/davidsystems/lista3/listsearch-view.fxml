<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.davidsystems.lista3.controller.ListSearchController"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

    <TextField fx:id="searchField" promptText="Enter name to search"/>
    <Button text="Search" onAction="#searchName"/>
    <Label fx:id="resultLabel" text="Result will appear here"/>
</VBox>
