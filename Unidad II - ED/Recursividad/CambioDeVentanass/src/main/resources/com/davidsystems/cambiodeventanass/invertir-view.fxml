<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Root container -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.davidsystems.cambiodeventanass.controller.InvertirController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Number Reverser" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Input for number -->
    <TextField fx:id="txtNumber" promptText="Enter a number" maxWidth="200"/>

    <!-- Button to invert the number -->
    <Button text="Invert Number" onAction="#invertNumber"/>

    <!-- Label to display result -->
    <Label fx:id="lblResult" text="Result will be shown here" style="-fx-font-size: 14; -fx-text-fill: blue;"/>
</VBox>