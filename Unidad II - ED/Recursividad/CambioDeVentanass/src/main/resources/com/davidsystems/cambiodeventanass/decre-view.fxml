<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- VBox layout for arranging elements vertically -->
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.davidsystems.cambiodeventanass.controller.DecreController"
      alignment="CENTER" spacing="10">

    <!-- Padding for spacing around the VBox -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title Label -->
    <Label text="Decreasing Sequence Printer"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Input field for number -->
    <TextField fx:id="txtNumber" promptText="Enter a number"/>

    <!-- Button that triggers recursion -->
    <Button text="Print Sequence" onAction="#printSequence"/>

    <!-- Label to display the result -->
    <Label fx:id="lblResult" text="Result will be shown here"
           style="-fx-font-size: 14px;"/>
</VBox>
