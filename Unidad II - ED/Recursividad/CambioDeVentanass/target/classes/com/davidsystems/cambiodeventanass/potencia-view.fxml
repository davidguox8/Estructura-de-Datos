<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Root container -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.davidsystems.cambiodeventanass.controller.PotenciaController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Power Calculator" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Input fields for base and exponent -->
    <TextField fx:id="txtBase" promptText="Enter base" maxWidth="200"/>
    <TextField fx:id="txtExp" promptText="Enter exponent" maxWidth="200"/>

    <!-- Button to calculate power -->
    <Button text="Calculate Power" onAction="#calculatePower"/>

    <!-- Label to display result -->
    <Label fx:id="lblResult" text="Result will appear here" style="-fx-font-size: 14; -fx-text-fill: blue;"/>
</VBox>