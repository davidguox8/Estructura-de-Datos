<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- Main layout using VBox -->
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.davidsystems.cambiodeventanass.controller.SumController"
      alignment="CENTER" spacing="10">

    <!-- Correct padding definition -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title label -->
    <Label text="Recursive Sum Calculator"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Input field for user number -->
    <TextField fx:id="txtNumber" promptText="Enter a number"/>

    <!-- Button to trigger calculation -->
    <Button text="Calculate" onAction="#calculateSum"/>

    <!-- Label to display result -->
    <Label fx:id="lblResult" text="Result will be shown here"
           style="-fx-font-size: 14px;"/>
</VBox>
